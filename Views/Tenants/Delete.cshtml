@model PMApp.Models.Tenant

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.css" />
<script src="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.js"></script>

@if (ViewBag.Message != null)
{
<script type="text/javascript">
            window.onload = function () {
                xdialog.alert("@ViewBag.Message");
            };
</script>
}

<div class="reportHeader">
    <h3>
        <img src="~/img/grandmother.jpg" alt="Repair Icon" width="55" height="60" />
        Are you sure you want to delete @Model.Last_name @Model.First_name
    </h3>
</div>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Last_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Last_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lease_start_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lease_start_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lease_end_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lease_end_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pets)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <input type="button" class="button" value="Back to List"
               onclick="location.href='@Url.Action("Index")'" />
    </form>
</div>
