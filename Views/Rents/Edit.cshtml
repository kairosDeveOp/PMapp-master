@model PMApp.Models.Rent

@{
    ViewData["Title"] = "Edit";
}

    <div class="reportHeader">
        <h3>
            <img src="~/img/rent.jpg" alt="Money Icon" width="55" height="60" />
            Add payment
        </h3>
    </div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RID" />
            <div class="form-group">
                <label asp-for="Date_due" class="control-label"></label>
                <input asp-for="Date_due" class="form-control" />
                <span asp-validation-for="Date_due" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_paid" class="control-label"></label>
                <input asp-for="Date_paid" class="form-control" />
                <span asp-validation-for="Date_paid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent_amount" class="control-label"></label>
                <input asp-for="Rent_amount" class="form-control" />
                <span asp-validation-for="Rent_amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount_paid" class="control-label"></label>
                <input asp-for="Amount_paid" class="form-control" />
                <span asp-validation-for="Amount_paid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenant" class="control-label"></label>
                <select asp-for="TenantTID" class="form-control" asp-items="ViewBag.TenantTID"></select>
                <span asp-validation-for="TenantTID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <select asp-for="UnitUID" class="form-control" asp-items="ViewBag.UnitUID"></select>
                <span asp-validation-for="UnitUID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="button" class="button" value="To Tenants"
           onclick="location.href='@Url.Action("Index", "Tenants")'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
