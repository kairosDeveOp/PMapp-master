@model PMApp.Models.Rent

@{
    ViewData["Title"] = "Details";
}

    <div class="reportHeader">
        <h3>
            <img src="~/img/rent.jpg" alt="Money Icon" width="55" height="60" />
            Record details
        </h3>
    </div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_due)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_due)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rent_amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rent_amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount_paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount_paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tenant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenant.First_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit.UID)
        </dd>
    </dl>
</div>
<div>
    <a class="Edit" asp-action="Edit" asp-route-id="@Model.RID">Edit</a> |
    <input type="button" class="button" value="To Tenants"
           onclick="location.href='@Url.Action("Index", "Tenants")'" />
</div>
