@model PMApp.Models.Vehicle

@{
    ViewData["Title"] = "Delete";
}

    <div class="reportHeader">
        <h3>
            <img src="~/img/car.jpg" alt="Car Icon" width="55" height="60" />
            Are you sure you want to delete this vehicle?
        </h3>
    </div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.License_plate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.License_plate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stall_number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stall_number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tenant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenant.First_name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <input type="button" class="button" value="To Tenants"
               onclick="location.href='@Url.Action("Index", "Tenants")'" />
    </form>
</div>
