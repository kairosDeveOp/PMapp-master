@model PMApp.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

    <div class="reportHeader">
        <h3>
            <img src="~/img/car.jpg" alt="Car Icon" width="55" height="60" />
            Create Vehicle
        </h3>
    </div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="License_plate" class="control-label"></label>
                <input asp-for="License_plate" class="form-control" />
                <span asp-validation-for="License_plate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stall_number" class="control-label"></label>
                <input asp-for="stall_number" class="form-control" />
                <span asp-validation-for="stall_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenantTID" class="control-label"></label>
                <select asp-for="TenantTID" class ="form-control" asp-items="ViewBag.TenantTID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="button" class="button" value="To Tenants"
           onclick="location.href='@Url.Action("Index", "Tenants")'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
