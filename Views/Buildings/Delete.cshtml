@model PMApp.Models.Building

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.css" />
<script src="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.js"></script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                xdialog.alert("@ViewBag.Message");
            };
    </script>
}


<div class="reportHeader">
    <h1>
        <img src="~/img/building.jpg" alt="Repair Icon" width="55" height="60" />
        Are you sure you want to delete @Model.Org_name property?
    </h1>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Org_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Org_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unit_Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit_Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zip_code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zip_code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TPID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TPID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BuildingId" />
        <input type="submit" value="Delete" class="btn btn-danger" />

        <p>
            <input type="button" class="button" value="BACK TO PROPERTIES"
                   onclick="location.href='@Url.Action("Index", "Buildings")'" />
        </p>
    </form>
</div>
