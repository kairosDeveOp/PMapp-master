@model PMApp.Models.Rent

@{
    ViewData["Title"] = "Delete";
}

<div class="reportHeader">
    <h3>
        <img src="~/img/calculator.jpg" alt="Repair Icon" width="55" height="60" />
        Are you sure you want to delete this record?
    </h3>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_due)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_due)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rent_amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rent_amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount_paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount_paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tenant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenant.Last_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit.Unit_Number)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <input type="button" class="button" value="Back to List"
               onclick="location.href='@Url.Action("Index", "Accounting")'" />
    </form>
</div>
