@model IEnumerable<PMApp.Models.Building>

@{
    ViewData["Title"] = "Index";
}

<div class="reportHeader">
    <img src="~/img/report1.png" alt="Report Icon" width="55" height="60" />
    <h1>Managed Properties Report</h1>
</div>

<p>
    <input type="button" class="button" value="BACK TO REPORTS"
           onclick="location.href='@Url.Action("Index", "Checklists")'" />
</p>

<p></p>
<p></p>

<p></p>
    <input type="image" class="Print" value="Print" src="~/img/print.png"
           onclick="location.href='@Url.Action("Print", "BuildingsReport")'"/>
<p></p>

<form asp-controller="BuildingsReport" asp-action="Index" method="get">
    <p>
        SEARCH: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Org_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TPID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(item => item.State))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Org_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TPID)
                </td>
                <td>
                    <a class="Details" asp-action="Details" asp-route-id="@item.BuildingId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
