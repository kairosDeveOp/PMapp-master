@model PMApp.Models.Checklist

@{
    ViewData["Title"] = "Create";
}

    <div class="reportHeader">
        <h1>
            <img src="~/img/alarm.jpg" alt="Repair Icon" width="55" height="60" />
            Create reminder
        </h1>
    </div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reminder" class="control-label"></label>
                <input asp-for="Reminder" class="form-control" />
                <span asp-validation-for="Reminder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="backToList" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
