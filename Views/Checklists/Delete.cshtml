@model PMApp.Models.Checklist

@{
    ViewData["Title"] = "Delete";
}

<div class="reportHeader">
    <h1>
        <img src="~/img/alarm.jpg" alt="Repair Icon" width="55" height="60" />
        Are you sure you want to delete this reminder?
    </h1>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reminder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="checklistId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="backToList" asp-action="Index">Back to List</a>
    </form>
</div>
